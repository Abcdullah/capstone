<p id="notice"><%= notice %></p>

<h1>Record Data</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Post</th>
      <th>Upvotes</th>
      <th>Date</th>
      <th>Totalviews</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @record_data.each do |record_datum| %>
      <tr>
        <td><%= record_datum.user %></td>
        <td><%= record_datum.post %></td>
        <td><%= record_datum.upvotes %></td>
        <td><%= record_datum.date %></td>
        <td><%= record_datum.totalViews %></td>
        <td><%= link_to 'Show', record_datum %></td>
        <td><%= link_to 'Edit', edit_record_datum_path(record_datum) %></td>
        <td><%= link_to 'Destroy', record_datum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

